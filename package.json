{
  "name": "vscode-ghostwriter",
  "displayName": "Ghostwriter",
  "description": "AI-assisted content creation tool for interviews and writing workflows",
  "version": "0.0.1",
  "publisher": "eliostruyf",
  "repository": {
    "type": "git",
    "url": "https://github.com/estruyf/vscode-ghostwriter"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#4e184c",
    "theme": "dark"
  },
  "icon": "assets/ghostwriter-128x128.png",
  "activationEvents": [],
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ghostwriter.openView",
        "title": "Open Ghostwriter",
        "category": "Ghostwriter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run clean && npm run build:ext && npm run build:webview",
    "build:ext": "tsup --minify",
    "build:webview": "vite build",
    "watch:ext": "tsup --watch",
    "watch:webview": "vite",
    "clean": "rm -rf out",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.108.1",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^5.1.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "eslint": "^9.39.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@estruyf/vscode": "^1.2.0",
    "@streamdown/code": "^1.0.1",
    "lucide-react": "^0.563.0",
    "streamdown": "^2.1.0"
  }
}
